{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/dashboard",
      "dest": "/dashboard/overview",
      "status": 307
    }
  ],
  "buildCommand": "yarn build",
  "outputDirectory": "dist",
  "framework": "vite",
  "regions": ["cdg1"],
  "env": {
    "NODE_VERSION": "18.x"
  }
}
