{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    { 
      "source": "/dashboard", 
      "destination": "/dashboard/overview" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ],
  "buildCommand": "yarn build",
  "outputDirectory": "dist",
  "framework": "vite",
  "regions": ["cdg1"],
  "env": {
    "NODE_VERSION": "18.x"
  }
}
